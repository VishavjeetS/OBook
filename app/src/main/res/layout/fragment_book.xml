<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    tools:context=".Fragments.BookFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F44336"
        android:textColor="@color/white"
        android:fontFamily="@font/calibri"
        android:text="Amritsar, Cinepolis"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/bookimg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/roundstyle"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookimg"
        android:background="@color/back"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/calibri"
        android:text="Movie"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/movieName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieName"
        android:background="@color/back"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/calibri"
        android:text="Movie"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/showTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieName1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/back"
        android:textColor="@color/white"
        android:fontFamily="@font/calibri"
        android:text="Show Time"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/showTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showTime1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/calibri"
        android:text="Show Time"
        android:background="@color/back"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/bookSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showTime"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/back"
        android:textColor="@color/white"
        android:fontFamily="@font/calibri"
        android:text="Book Seats"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/bookSeatsEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookSeats"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-40dp"
        android:layout_toRightOf="@+id/bookSeats"
        android:background="@color/back"
        android:fontFamily="@font/calibri"
        android:hint="2"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="32sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Book"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bookSeatsEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#E91E1E"
        android:background="@drawable/roundstyle"
        android:text="Book Ticket!"
        android:textSize="17sp" />
</RelativeLayout>