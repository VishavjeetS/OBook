<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    tools:context=".Fragments.BrowseFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f7f7"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amritsar, Cinepolis"
            android:fontFamily="@font/calibri"
            android:layout_gravity="center"
            android:textSize="27sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="20dp"
            android:text="SELECT A MOVIE"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/mov1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/movie_img1" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="World of Warcraft"
                        android:textAlignment="center"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mov2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/movie_img2" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="Kong: Skull Island"
                        android:textAlignment="center"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mov3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/movie_img3" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="The Lego Batman"
                        android:textAlignment="center"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mov4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/movie_img1" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="World of Warcraft"
                        android:textAlignment="center"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="20dp"
            android:text="SELECT DATE"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="25"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="TUE"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="26"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="WED"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="27"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="THU"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="28"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="FRI"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="29"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="SAT"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/calibri"
                    android:text="30"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="SUN"
                    android:textAlignment="center"
                    android:textColor="#7E7E7E"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="20dp"
            android:text="SELECT TIME"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33.3"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:fontFamily="@font/calibri"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:text="11:00 AM"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33.3"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:fontFamily="@font/calibri"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:text="1:30 PM"
                    android:clickable="true"
                    android:focusable="true"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33.3"
                    android:background="@drawable/light_gray_rounded_border_shape"
                    android:fontFamily="@font/calibri"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:text="04:00 PM"
                    android:clickable="true"
                    android:focusable="true"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/proceed"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#E91E1E"
            android:layout_marginTop="25dp"
            android:text="Proceed"
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>